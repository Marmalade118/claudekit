{
  // Hook configuration for Yarn-based projects
  // Place this file at .claudekit/config.json in your project
  "hooks": {
    // TypeScript type checking
    "typecheck": {
      // Use yarn to run TypeScript compiler
      "command": "yarn tsc --noEmit",
      // Timeout for type checking
      "timeout": 45000,
      // Optional: use specific TypeScript config
      "configFile": "tsconfig.strict.json"
    },
    
    // Detect 'any' usage
    "no-any": {
      // Built-in detection
      "timeout": 5000,
      // Optional: exclude test files from 'any' detection
      "excludePatterns": ["**/*.test.ts", "**/*.spec.ts"]
    },
    
    // ESLint configuration
    "eslint": {
      // Run ESLint through yarn
      "command": "yarn eslint",
      // ESLint timeout
      "timeout": 30000,
      // Enable auto-fix
      "fix": true,
      // Use ESLint cache for faster runs
      "cache": true,
      // Custom cache location
      "cacheLocation": ".yarn/.eslintcache"
    },
    
    // Test runner configuration
    "run-related-tests": {
      // Use yarn test command
      "command": "yarn test",
      // Test timeout (60 seconds)
      "timeout": 60000,
      // Run tests in watch mode during development
      "watch": false,
      // Coverage threshold enforcement
      "coverage": {
        "statements": 80,
        "branches": 75,
        "functions": 80,
        "lines": 80
      }
    },
    
    // Auto-checkpoint for Yarn projects
    "auto-checkpoint": {
      // Quick stash operations
      "timeout": 10000,
      // Project-specific prefix
      "prefix": "yarn-project",
      // Keep more checkpoints for larger projects
      "maxCheckpoints": 20,
      // Include untracked files in checkpoints
      "includeUntracked": true
    },
    
    // Comprehensive project validation
    "project-validation": {
      // Run all validation checks
      "command": "yarn validate:all",
      // Or use individual yarn scripts:
      "typescriptCommand": "yarn type-check",
      "eslintCommand": "yarn lint:all",
      "testCommand": "yarn test:ci",
      "buildCommand": "yarn build",
      // Extended timeout for full validation
      "timeout": 180000,
      // Fail fast on first error
      "failFast": false
    },
    
    // Todo completion check
    "validate-todo-completion": {
      "timeout": 5000,
      // Yarn workspaces support
      "checkWorkspaces": true
    },
    
    // Yarn-specific: Dependency validation
    "validate-dependencies": {
      // Check for outdated dependencies
      "command": "yarn outdated",
      "timeout": 30000,
      // Alert on major version updates
      "alertOnMajor": true
    }
  },
  
  // Yarn workspace configuration
  "workspaces": {
    // Enable workspace-aware hooks
    "enabled": true,
    // Run hooks in all workspaces
    "runInAll": false,
    // Specific workspace configurations
    "packages": {
      "frontend": {
        "eslint": {
          "command": "yarn workspace frontend eslint"
        }
      },
      "backend": {
        "eslint": {
          "command": "yarn workspace backend eslint"
        }
      }
    }
  }
}