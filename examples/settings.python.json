{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "tools:Write AND file_paths:**/*.py",
        "hooks": [
          {"type": "command", "command": "claudekit-hooks run python-lint"},
          {"type": "command", "command": "claudekit-hooks run python-type-check"}
        ]
      },
      {
        "matcher": "tools:Write AND file_paths:**/*.{py,pyi}",
        "hooks": [
          {"type": "command", "command": "claudekit-hooks run python-format"}
        ]
      },
      {
        "matcher": "Write,Edit,MultiEdit",
        "hooks": [
          {"type": "command", "command": "claudekit-hooks run test-changed"}
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {"type": "command", "command": "claudekit-hooks run create-checkpoint"},
          {"type": "command", "command": "claudekit-hooks run check-todos"}
        ]
      }
    ]
  }
}