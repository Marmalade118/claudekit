#!/usr/bin/env node

// Import and run the hooks CLI
import { createRequire } from 'module';
const require = createRequire(import.meta.url);

const hooksModule = require('../dist/hooks-cli.cjs');
if (hooksModule.createHooksCLI) {
  hooksModule.createHooksCLI().parse(process.argv);
} else {
  console.error('Failed to find createHooksCLI function in hooks module');
  process.exit(1);
}