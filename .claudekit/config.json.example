{
  "hooks": {
    "self-review": {
      "triggerProbability": 0.7,
      "focusAreas": [
        {
          "name": "Performance",
          "questions": [
            "Did you consider the performance impact of your changes?",
            "Are there any unnecessary re-renders or computations?",
            "Could this code benefit from memoization or caching?"
          ]
        },
        {
          "name": "Security",
          "questions": [
            "Have you validated all user inputs?",
            "Are there any potential security vulnerabilities?",
            "Did you handle sensitive data appropriately?"
          ]
        },
        {
          "name": "Maintainability",
          "questions": [
            "Is the code self-documenting and easy to understand?",
            "Did you add appropriate error handling?",
            "Would another developer understand this code?"
          ]
        }
      ]
    },
    "typecheck-changed": {
      "command": "npx tsc --noEmit",
      "timeout": 30000
    },
    "typecheck-project": {
      "command": "npx tsc --noEmit"
    },
    "lint-changed": {
      "command": "npx eslint",
      "fix": false,
      "extensions": [".js", ".jsx", ".ts", ".tsx"],
      "timeout": 30000
    },
    "lint-project": {
      "command": "npx eslint . --ext .js,.jsx,.ts,.tsx"
    },
    "test-changed": {
      "command": "npm test"
    },
    "test-project": {
      "command": "npm test",
      "timeout": 50000
    },
    "create-checkpoint": {
      "prefix": "claude",
      "maxCheckpoints": 10
    }
  }
}